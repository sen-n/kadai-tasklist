<% if logged_in?  %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  
  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> :<%= l task.created_at, format: :short %> &gt; <%= task.company %> &gt; <%= task.status %> &gt; <%= task.other %></li> 
    <% end %>  
  </ul>

  <%= link_to '新規タスクの作成', new_task_path %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>

  <% else %>
    <%= link_to 'ログインはこちら', login_path %>
  <% end %>  
  


  