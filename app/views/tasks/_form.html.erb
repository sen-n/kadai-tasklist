<%= form_with(model: @task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :company, '応募企業' %>
  <%= f.text_field :company %>
  
  <%= f.label :status, '選考状況' %>
  <%= f.text_field :status %>
  
  <%= f.label :other, '備考' %>
  <%= f.text_field :other %>
  
  <%= f.submit '登録' %>
<% end %>